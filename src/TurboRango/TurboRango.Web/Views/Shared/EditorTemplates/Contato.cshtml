@model TurboRango.Dominio.Contato

@Html.HiddenFor(model => model.Id)
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.Site, htmlAttributes: new { @class = "control-label col-md-2" })
